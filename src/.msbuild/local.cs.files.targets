<!--      Overwrite="true"-->
<!--      Condition="!Exists('@(LocalCompileFile)') AND '%(LocalCompileFile.Text)'!=''" Lines="%(LocalCompileFile.Text)">-->
<!--    </WriteLinesToFile>-->

  </Target>

</Project>